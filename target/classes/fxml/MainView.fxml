<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.inventory.controller.MainController"
            fx:id="mainBorderPane"
            prefHeight="700.0" prefWidth="1200.0">

    <!-- TOP: Menu Bar & User Info -->
    <top>
        <VBox>
            <!-- Menu Bar -->
            <MenuBar>
                <Menu text="File">
                    <MenuItem text="Profile" fx:id="menuItemProfile" onAction="#handleProfile"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Logout" fx:id="menuItemLogout" onAction="#handleLogout"/>
                    <MenuItem text="Exit" onAction="#handleExit"/>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About" fx:id="menuItemAbout" onAction="#handleAbout"/>
                </Menu>
            </MenuBar>
            
            <!-- User Info Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
                <Label fx:id="welcomeLabel" text="Welcome, User" textFill="white">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                
                <Separator orientation="VERTICAL"/>
                
                <Label fx:id="userRoleLabel" text="Role: Admin" textFill="#ecf0f1">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
                
                <Separator orientation="VERTICAL"/>
                
                <Label fx:id="lastLoginLabel" text="Last Login: N/A" textFill="#bdc3c7">
                    <font>
                        <Font size="11.0"/>
                    </font>
                </Label>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;">
                    <padding>
                        <Insets top="5" right="15" bottom="5" left="15"/>
                    </padding>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- LEFT: Navigation Sidebar -->
    <left>
        <VBox spacing="5.0" style="-fx-background-color: #34495e; -fx-padding: 10;" prefWidth="200.0">
            <Label text="Navigation" textFill="white" style="-fx-font-size: 16; -fx-font-weight: bold;">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Label>
            
            <Button fx:id="btnDashboard" text="ðŸ“Š Dashboard" onAction="#loadDashboard"
                    maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13; -fx-cursor: hand;">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
            </Button>
            
            <Button fx:id="btnProducts" text="ðŸ“¦ Products" onAction="#loadProducts"
                    maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13; -fx-cursor: hand;">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
            </Button>
            
            <Button fx:id="btnCategories" text="ðŸ“‘ Categories" onAction="#loadCategories"
                    maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13; -fx-cursor: hand;">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
            </Button>
            
            <Button fx:id="btnSuppliers" text="ðŸ¢ Suppliers" onAction="#loadSuppliers"
                    maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13; -fx-cursor: hand;">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
            </Button>
            
            <Button fx:id="btnOrders" text="ðŸ›’ Orders" onAction="#loadOrders"
                    maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13; -fx-cursor: hand;">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
            </Button>
            
            <Button fx:id="btnReports" text="ðŸ“ˆ Reports" onAction="#loadReports"
                    maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13; -fx-cursor: hand;">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
            </Button>
            
            <Separator/>
            
            <Button fx:id="btnUsers" text="ðŸ‘¥ User Management" onAction="#loadUsers"
                    maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 13; -fx-cursor: hand;">
                <padding>
                    <Insets top="10" right="15" bottom="10" left="15"/>
                </padding>
            </Button>
        </VBox>
    </left>

    <!-- CENTER: Content Area -->
    <center>
        <ScrollPane fx:id="centerScroll" fitToWidth="true" pannable="true" vbarPolicy="AS_NEEDED" hbarPolicy="AS_NEEDED" style="-fx-background-color: #ecf0f1;">
            <StackPane>
                <Label text="Select a menu item to begin" style="-fx-font-size: 18; -fx-text-fill: #7f8c8d;"/>
            </StackPane>
        </ScrollPane>
    </center>

    <!-- BOTTOM: Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #2c3e50; -fx-padding: 5 10;">
            <Label text="Inventory Management System v1.0" textFill="#bdc3c7">
                <font>
                    <Font size="11.0"/>
                </font>
            </Label>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Label text="Â© 2024 Your Company" textFill="#95a5a6">
                <font>
                    <Font size="10.0"/>
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>