<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.inventory.controller.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #3b82f6, #2563eb);">

    <!-- Login Card -->
    <VBox alignment="CENTER" spacing="0" maxWidth="450" maxHeight="550"
          style="-fx-background-color: white; -fx-background-radius: 16px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 5);">
        
        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>

        <!-- Logo/Title Section -->
        <VBox alignment="CENTER" spacing="10">
            <!-- Icon (you can replace with an image) -->
            <Label text="ðŸ“¦" style="-fx-font-size: 48px;"/>
            
            <Label text="Inventory Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
            <Label text="Please sign in to continue" style="-fx-font-size: 13px; -fx-text-fill: #64748b;"/>
        </VBox>

        <!-- Spacer -->
        <Region VBox.vgrow="SOMETIMES" minHeight="30" maxHeight="30"/>

        <!-- Login Form -->
        <VBox spacing="20">
            
            <!-- Username Field -->
            <VBox spacing="8">
                <Label text="Username" style="-fx-font-weight: bold; -fx-text-fill: #334155; -fx-font-size: 13px;"/>
                <TextField fx:id="usernameField" 
                          promptText="Enter your username"
                          style="-fx-font-size: 14px; -fx-padding: 12px; -fx-border-color: #e2e8f0; -fx-border-radius: 8px; -fx-background-radius: 8px;"
                          prefWidth="350"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="8">
                <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #334155; -fx-font-size: 13px;"/>
                <PasswordField fx:id="passwordField" 
                              promptText="Enter your password"
                              style="-fx-font-size: 14px; -fx-padding: 12px; -fx-border-color: #e2e8f0; -fx-border-radius: 8px; -fx-background-radius: 8px;"
                              prefWidth="350"/>
            </VBox>

            <!-- Remember Me & Forgot Password -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <CheckBox fx:id="rememberMeCheckbox" text="Remember me" 
                         style="-fx-font-size: 12px; -fx-text-fill: #64748b;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Hyperlink text="Forgot Password?" 
                          onAction="#handleForgotPassword"
                          style="-fx-font-size: 12px; -fx-text-fill: #3b82f6;"/>
            </HBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel" 
                   style="-fx-text-fill: #ef4444; -fx-font-size: 13px; -fx-padding: 8px; -fx-background-color: #fee2e2; -fx-background-radius: 6px;"
                   wrapText="true"
                   visible="false"/>

            <!-- Login Button -->
            <StackPane>
                <Button fx:id="loginButton" 
                       text="Sign In" 
                       onAction="#handleLogin"
                       defaultButton="true"
                       maxWidth="Infinity"
                       style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12px; -fx-background-radius: 8px; -fx-cursor: hand;">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Button>
                
                <!-- Loading Indicator -->
                <ProgressIndicator fx:id="loadingIndicator" 
                                  maxWidth="24" maxHeight="24"
                                  visible="false"/>
            </StackPane>

        </VBox>

        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS"/>

        <!-- Footer -->
        <VBox alignment="CENTER" spacing="8">
            <Separator prefWidth="350"/>
            <Label text="Default Login: admin / password123" 
                   style="-fx-font-size: 11px; -fx-text-fill: #94a3b8;"/>
            <Label text="Version 1.0.0 â€¢ Â© 2026" 
                   style="-fx-font-size: 11px; -fx-text-fill: #cbd5e1;"/>
        </VBox>

    </VBox>

</StackPane>